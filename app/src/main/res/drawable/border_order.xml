<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Status "Selesai" (Hijau) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="3dp" android:color="@color/green" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Status "Ditolak" (Merah) -->
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="3dp" android:color="@color/red" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Status "Diproses" (Kuning) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="3dp" android:color="@color/yellow" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>
